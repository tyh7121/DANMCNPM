@model Conference

<form asp-action="UpdateConference" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Conference</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-2">
                        <label asp-for="Date" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Title" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Country" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="Country" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Url" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Url" class="form-control" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="EventStatus" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="EventStatus" class="form-control" />
                        <span asp-validation-for="EventStatus" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Organizer" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Organizer" class="form-control" />
                        <span asp-validation-for="Organizer" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Deadline" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Deadline" class="form-control" />
                        <span asp-validation-for="Deadline" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="StartDate" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="EndDate" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Secretary" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Secretary" class="form-control" />
                        <span asp-validation-for="Secretary" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="InquiryEmail" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="InquiryEmail" class="form-control" />
                        <span asp-validation-for="InquiryEmail" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="RegistrationUrl" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="RegistrationUrl" class="form-control" />
                        <span asp-validation-for="RegistrationUrl" class="text-danger"></span>
                    </div>

                    <div class="col-5 offset-2">
                        <a asp-action="Index" asp-controller="Home" class="btn-primary btn form-control">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}